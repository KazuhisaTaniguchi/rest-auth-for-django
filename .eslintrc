{
  #.eslintrc
  # インストール
  # npm install eslint --save-dev
  # npm install eslint-plugin-react --save-dev
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            2,
            {"SwitchCase": 1}
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        # "quotes": [
        #     "error",
        #     "double"
        # ],
        "semi": [
            "error",
            "never"
        ],
        "no-console": "off",
        # "react/no-set-state": "error",
    }
}
